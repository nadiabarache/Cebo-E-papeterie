{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h2>Les listes des pages ajoutées</h2>

   <table class="table table-striped table-hover">

        <thead>
            <tr>
               
                <th>Titre</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>
              
                <td>
                <ul>
                    <a href="{{ path('adminPages_show', { 'id': entity.id }) }}"><i  class="icon-eye-open"></i></a>
                      <a href="{{ path('adminPages_edit', { 'id': entity.id }) }}"><i  class="icon-edit"></i></a>    
                </ul>
                </td>
            </tr>
          
        {% endfor %}
        </tbody>
    </table>

        <ul>
       
            <a href="{{ path('adminPages_new') }}">
            <i  class=" icon-plus-sign"></i>      Créer une nouvelle page
            </a>
       
    </ul>
    {% endblock %}
